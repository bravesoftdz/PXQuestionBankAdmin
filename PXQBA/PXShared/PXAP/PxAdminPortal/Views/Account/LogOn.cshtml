@model Bfw.PXAP.Models.LogOnModel
@{
    ViewBag.Title = "Log On";
    Layout = "~/Views/Shared/_LayoutLogOn.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    <div>
        <div id="divLogIn">
            <div style="font-size: 22px; font-weight: bold; padding: 10px 0 10px 20px;">
                Login
            </div>
            <div style="margin-left: 30px;">
                @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")
            </div>
            <br />
            @{
           Bfw.PXAP.Models.LayoutModel layoutModel = ViewBag.LayoutModel as Bfw.PXAP.Models.LayoutModel;
            }
            @{
                var envList  = layoutModel.EnvironmentOptions;
                envList.RemoveAt(0);
                if (layoutModel.PxEnvironments.Count > 0)
                {
                            <div class="dataPara">
                                <div class="label">
                                    Environment:
                                </div>
                                @Html.DropDownList("Environment", envList)
                                <div class="errorMessage">
                                    @Html.ValidationMessageFor(m => m.Environment)
                                </div>
                            </div>
                }
            
            }
            <div class="dataPara">
                <div class="label">
                    User:
                </div>
                @Html.TextBoxFor(m => m.UserName)
                <div class="errorMessage">
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>
            <div class="dataPara">
                <div class="label">
                    Password:
                </div>
                @Html.PasswordFor(m => m.Password)
                <div class="errorMessage">
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div class="logonBtn">
                <input type="submit" value="Log On" style="" />
            </div>
        </div>
    </div>
}
